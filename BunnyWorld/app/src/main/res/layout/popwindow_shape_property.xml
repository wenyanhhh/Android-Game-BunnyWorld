<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Shape Name: "/>

            <EditText
                android:id="@+id/shape_name_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your shape name"/>
            <Button
                android:id="@+id/shape_undo_name"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textSize="10dp"
                android:text="Undo Rename"/>

            <Switch
                android:id="@+id/shape_movable_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movable"
                android:checked="true" />

            <Switch
                android:id="@+id/shape_set_show_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show"
                android:checked="true"/>

        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4">

            <TextView
                android:layout_row="0"
                android:layout_column="0"
                android:text="Top: "/>

            <EditText
                android:id="@+id/shape_top_menu"
                android:layout_row="0"
                android:layout_column="1"/>

            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:text="Bottom:"/>

            <EditText
                android:id="@+id/shape_bottom_menu"
                android:layout_row="1"
                android:layout_column="1"/>

            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:text="Left:"/>

            <EditText
                android:id="@+id/shape_left_menu"
                android:layout_row="2"
                android:layout_column="1"/>

            <TextView
                android:layout_row="3"
                android:layout_column="0"
                android:text="Right:"/>

            <EditText
                android:id="@+id/shape_right_menu"
                android:layout_row="3"
                android:layout_column="1"/>

            <!--<TextView-->
                <!--android:layout_row = "4"-->
                <!--android:layout_column="0"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Edit Text: "/>-->

            <!--<EditText-->
                <!--android:id="@+id/text_editor_menu"-->
                <!--android:layout_row = "4"-->
                <!--android:layout_column="1"/>-->
            <!--<TextView-->
                <!--android:layout_row = "5"-->
                <!--android:layout_column="0"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Font Size: "/>-->
            <!--<EditText-->
                <!--android:id="@+id/text_size_editor_menu"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"/>-->


        </GridLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Text: "
            android:textSize="8dp"/>

        <EditText
            android:id="@+id/text_editor_menu"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="8dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Font Size: "
            android:textSize="8dp"/>
        <EditText
            android:id="@+id/text_size_editor_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Scripts: "
            android:textSize="8dp"/>

        <TextView
            android:id="@+id/shape_script_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:layout_weight="1"
            android:text="SCRIPTS"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image-Name: "
            android:textSize="8dp"/>

        <TextView
            android:id="@+id/shape_image_name_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:layout_weight="1"
            android:text="Image-Name"/>

    </LinearLayout>


</LinearLayout>